@helper SetRating(int? rating)
    {
        if (rating.HasValue)
        {
            for (int i = 0; i < rating; i++)
            {
                <span class="glyphicon glyphicon-star"></span>
            }
            for (int i = 0; i < 10 - rating; i++)
            {
                <span class="glyphicon glyphicon-star-empty"></span>
            }
        }
}
