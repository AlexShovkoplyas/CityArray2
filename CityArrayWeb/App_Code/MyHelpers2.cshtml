    public static WebViewPage page = (PageContext.Page as WebViewPage);
    public static HtmlHelper<object> html = page.Html;
}

@helper ReplaceCrLf(string strText)
    {
        @html.Raw(Html.Encode(strText).Replace(Environment.NewLine, "<br />"));
}

@helper  Action(Delegate action, object routeValues)
    {
        string actionName = nameof(action);
        string controllerName = action.Method.DeclaringType.Name.Replace("Controller", "");

        @html.Action(actionName, controllerName, routeValues)
